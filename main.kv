<AboutScreen@MDScreen>:
    name: "AboutScreen"
    md_bg_color: app.theme_cls.backgroundColor

    MDFloatLayout:
        pos_hint: {'center_x': 0.5,'center_y': 0.5}

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {'center_x': .06,'center_y': .94}
            on_release: app.backButtonHandler()

        MDLabel:
            pos_hint: {'center_x': 0.5,'center_y': 0.825}
            text: "About"
            font_style: "urbanist"
            role: "large"
            adaptive_height: True
            size_hint_x: 0.2

        MDLabel:
            pos_hint: {'center_x': 0.5,'center_y': 0.635}
            text: "This is Surface Weather V1, a minimalistic, Material You inspired weather app, \nmade using Kivy, KivyMD and Python for Android and Windows"
            font_style: "urbanistSMALL2"
            role: "medium"
            adaptive_height: True
            size_hint_x: 0.7
            halign: "center"

        MDLabel:
            pos_hint: {'center_x': 0.5,'center_y': 0.45}
            text: "Weather Data is provided by MET Norway"
            font_style: "urbanistSMALL2"
            role: "large"
            adaptive_height: True
            size_hint_x: 0.4
            halign: "center"

        MDLabel:
            pos_hint: {'center_x': 0.5,'center_y': 0.35}
            text: "Geolocation Data is provided by IP-API"
            font_style: "urbanistSMALL2"
            role: "large"
            adaptive_height: True
            size_hint_x: 0.6
            halign: "center"

        MDLabel:
            pos_hint: {'center_x': 0.5,'center_y': 0.25}
            text: "The city database is provided by simplemaps"
            font_style: "urbanistSMALL2"
            role: "large"
            adaptive_height: True
            size_hint_x: 0.6
            halign: "center"

        MDLabel:
            pos_hint: {'center_x': 0.5,'center_y': 0.15}
            text: "The font used is Urbanist by Corey Hu"
            font_style: "urbanistSMALL2"
            role: "large"
            adaptive_height: True
            size_hint_x: 0.6
            halign: "center"

